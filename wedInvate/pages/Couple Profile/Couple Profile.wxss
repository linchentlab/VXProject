.invitation-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
}

.invitation-header {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.invitation-text {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
  text-align: center;
}

.love-list {
  width: 100%;
  height: 500rpx;
  margin: 0 auto;
}

.love-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #ddd;
}

.love-image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}

.love-text {
  flex: 1;
}

.love-date {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.love-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}