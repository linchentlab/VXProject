<!--倒计时-->
<view class="countdown-container">
  <view class="countdown-text">距离指定日期还有:</view>
  <view class="countdown-time">
    <view>{{days}}</view>
    <text>天</text>
    <view>{{hours}}</view>
    <text>时</text>
    <view>{{minutes}}</view>
    <text>分</text>
    <view>{{seconds}}</view>
    <text>秒</text>
  </view>
  <button bindtap="gotoIndex">返回首页</button>
</view>
