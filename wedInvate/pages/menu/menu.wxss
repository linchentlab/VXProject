.menu-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
}

.menu-header {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.menu-list {
  width: 100%;
  height: 500rpx;
  margin: 0 auto;
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #ddd;
}

.menu-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.menu-price {
  font-size: 28rpx;
  font-weight: bold;
  color: #e4393c;
}

.btn {
  margin-top: 20px;
  border-radius: 98rpx;
  background-color: #2b4b6b;
  color: white;
}